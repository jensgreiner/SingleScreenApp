<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_image_relLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/claasenHouse"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:contentDescription="Claasen Headquarter"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p1020015" />

                <TextView
                    android:id="@+id/companyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/claasenHouse"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Claasen Communication"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/claasenLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@+id/claasenHouse"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/claasenHouse"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="Claasen Logo"
                    app:srcCompat="@drawable/logo_c" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/companyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="One of the leading German public relations agencies in the travel and tourism industry."
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/contactTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="24dp"
                    android:text="Contact"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:id="@+id/phoneData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phoneIcon"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_call" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="+49 (0) 6257 68781"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addressIcon"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_mapmode" />

                    <TextView
                        android:id="@+id/addressStreet"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="HindenburgstraÃŸe 2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/addressCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="45dp"
                    android:text="64665 Alsbach"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/addressCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="45dp"
                    android:text="Germany"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/emailData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_send" />

                    <TextView
                        android:id="@+id/emailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="info[at]claasen.de"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/webaddressData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/websiteIcon"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_compass" />

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="www.claasen.de"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/customersTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Customers"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="?attr/dividerHorizontal"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tourOperatorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tour Operator"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/tourOperatorImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ameropa"
                            android:layout_width="179dp"
                            android:layout_height="65dp"
                            android:contentDescription="Ameropa Logo"
                            app:srcCompat="@drawable/ameropa" />

                        <ImageView
                            android:id="@+id/aviationTourismLogo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/aviationtourism" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/AviationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/aviationImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/airAstanaLogo"
                            android:layout_width="136dp"
                            android:layout_height="42dp"
                            android:layout_marginRight="4dp"
                            android:contentDescription="Air Astana Logo"
                            app:srcCompat="@drawable/airastana" />

                        <ImageView
                            android:id="@+id/sunExpressLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:contentDescription="Sun Express Logo"
                            app:srcCompat="@drawable/sunexpress" />

                        <ImageView
                            android:id="@+id/unitedLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/united" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/destinationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destinations"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/destinationImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/crusaLogo"
                            android:layout_width="97dp"
                            android:layout_height="match_parent"
                            android:contentDescription="CRUSA Logo"
                            app:srcCompat="@drawable/crusa" />

                        <ImageView
                            android:id="@+id/virginiaBeachLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="Virginia Beach Logo"
                            app:srcCompat="@drawable/virginiabeach" />

                        <ImageView
                            android:id="@+id/rockfortLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="Rockford Logo"
                            app:srcCompat="@drawable/rockford" />

                        <ImageView
                            android:id="@+id/greatRiversLogo"
                            android:layout_width="86dp"
                            android:layout_height="117dp"
                            android:contentDescription="Great Rivers Logo"
                            app:srcCompat="@drawable/greatriverroadcountry" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/salesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/salesImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lhCityCenterLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="LH City Center Logo"
                            app:srcCompat="@drawable/lhcc" />

                        <ImageView
                            android:id="@+id/eBookersLogo"
                            android:layout_width="183dp"
                            android:layout_height="63dp"
                            android:contentDescription="eBookers Logo"
                            app:srcCompat="@drawable/ebookers" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/techonologyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Technology"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/technologyImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/travelportLogo"
                            android:layout_width="132dp"
                            android:layout_height="59dp"
                            android:contentDescription="Travelport Logo"
                            app:srcCompat="@drawable/travelport" />

                        <ImageView
                            android:id="@+id/travelITLogo"
                            android:layout_width="127dp"
                            android:layout_height="69dp"
                            android:contentDescription="travel-IT Logo"
                            app:srcCompat="@drawable/travelit" />

                        <ImageView
                            android:id="@+id/cruisehostLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="Cruisehost Logo"
                            app:srcCompat="@drawable/cruisehost" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/othersLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Others Logo"
                        android:text="Others"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/othersImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/barigLogo"
                            android:layout_width="190dp"
                            android:layout_height="67dp"
                            android:contentDescription="BARIG Logo"
                            app:srcCompat="@drawable/barig" />

                        <ImageView
                            android:id="@+id/taaLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="taa Logo"
                            app:srcCompat="@drawable/taa" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/claasenLogoLong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.99"
                        android:adjustViewBounds="true"
                        android:contentDescription="Claasen Logo long"
                        app:srcCompat="@drawable/logo_normal" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>